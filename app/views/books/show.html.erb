<%= link_to "← Retour", root_path, class:"text-decoration-none text-dark ms-5 " %>

<div class='container mb-5'>

  <%# Titre et prix %>
  <div class="accroche">
    <h3><%= @book.title %></h3>
    <h4><%= @book.price_per_day %> € par jour</h4>
  </div>

  <%# card show %>
  <div class="card-show">
    <%# photo %>
    <div class="img-show">
      <%if @book.photo.attached? %>
        <%= cl_image_tag @book.photo.key, crop: :fill , height: 400 %>
      <% end %>
    </div>
    <%# contenu textuel %>
    <div class="text-show">
      <h5>Description</h5>
      <br>
      <%=@book.description%>
      <%# réservation date %>
      <% if @book.user != current_user %>
        <div class="mt-5">
          <%= simple_form_for [@book, @booking] do |f|%>
            <div class="booking-dates">
              <%= f.input :starting_date, as: :date, html5: true, label: 'De' %>
              <%= f.input :ending_date, as: :date, html5: true, label: 'à' %>
            </div>
            <%= f.submit 'Réserver', class: "btn btn-primary"%>
          <% end %>
        </div>
      <%end%>
    </div>

  </div>



</div>
