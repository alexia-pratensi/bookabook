
  <%# text accroche %>
<div class="accroche">
  <h3>Besoin d'un peu de lecture ?</h3>
  <h3>Laisser vous tenter par les offres du moment à louer</h3>
  <%# barre de recherche %>
  <div class="my-5 mx-auto w-50">
    <%= form_with url: root_path, method: :get, class: "d-flex " do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control bg-white",
        placeholder: "Trouve un livre"
      %>
      <%= submit_tag "Rechercher", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class='container mb-5'>
  <%# card offre en location %>
  <div class="grid-card">
    <% @books.each do |book| %>
      <% if book.user != current_user %>
        <div class="card-product">
          <div class="photo-book">
            <%if book.photo.attached? %>
              <%= cl_image_tag book.photo.key %>
            <% end %>
          </div>
          <div class="card-product-infos">
            <h2><strong><%= book.title %></strong></h2>
            <p>Description: <%= book.description %></p>
            <p>Auteur: <%= book.author %></p>
            <p>Année: <%= book.year %></p>
            <p>Editeur: <%= book.publisher %></p>
            <p>Prix par jour: <%= book.price_per_day %> €</p>
            <%= link_to 'Plus de détails', book_path(book), class: "btn btn-primary button" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

</div>
